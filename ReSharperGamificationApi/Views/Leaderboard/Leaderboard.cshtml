@{
    Layout = "_Layout";
    ViewBag.Title = "Leaderboard";
}

<h1 class="text-center my-4 display-4">ReSharper Leaderboard</h1>

<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center" style="width: 5%;">#</th>
            <th scope="col" style="width: 30%;">First Name</th>
            <th scope="col" style="width: 30%;">Last Name</th>
            <th scope="col" class="text-right" style="width: 15%;">Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.LeaderboardEntries)
        {
            <tr>
                <td class="text-center">@entry.Position</td>
                <td>@entry.FirstName</td>
                <td>@entry.LastName</td>
                <td class="text-right">@entry.Points</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Leaderboard Page Navigation">
    <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "active")">
            <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)&pageSize=@(Model.PageSize)" aria-label="Previous" @(Model.CurrentPage == 1 ? "tabindex=-1 aria-disabled=true" : "")>
                <i class="bi bi-xs bi-chevron-left"></i>
            </a>
        </li>

        <!-- Current Page Display -->
        <li class="page-item disabled" aria-current="page">
            <span class="page-link">
                Page @Model.CurrentPage of @Model.TotalPages
            </span>
        </li>

        <!-- Next Button -->
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "active")">
            <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)&pageSize=@(Model.PageSize)" aria-label="Next" @(Model.CurrentPage == Model.TotalPages ? "tabindex=-1 aria-disabled=true" : "")>
                <i class="bi bi-xs bi-chevron-right"></i>
            </a>
        </li>
    </ul>
</nav>
